generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AllEvents {
  event_id        String  @id
  name            String?
  url             String?
  start_time      String?
  start_date      String?
  end_time        String?
  end_date        String?
  duration        String?
  venue_name      String?
  venue_address   String?
  longitude       String?
  latitude        String?
  summary         String?
  is_online_event String?
  tickets_url     String?
  tags            String?
  data_source     String?
  image           String?
  User            User[]

  @@map("all_events")
}

model User {
  id             String      @id @default(uuid()) @db.Uuid
  fullName       String
  email          String      @unique
  password       String
  age            Int?       
  createdAt      DateTime?   @default(now())
  updatedAt      DateTime?    @updatedAt
  childrenAges   String?     
  genderChildren String?  
  isAdmin        Boolean?     @default(false)
  isDisabled     Boolean?     @default(false)
  location       String?     
  numberChildren Int?        
  role           Role?        @default(CUSTOMER)
  all_events     AllEvents[]
}

enum Role {
  ADMIN
  CUSTOMER
}
