generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CUSTOMER
}

model all_events {
  event_id        String  @id
  name            String?
  url             String?
  start_time      String?
  start_date      String?
  end_time        String?
  end_date        String?
  duration        String?
  venue_name      String?
  venue_address   String?
  longitude       String?
  latitude        String?
  summary         String?
  is_online_event String?
  tickets_url     String?
  tags            String?
  data_source     String?
  image           String?
  favoritedBy     User[]
}

model User {
  id             String       @id @default(uuid()) @db.Uuid
  fullName       String
  email          String       @unique
  password       String
  age            Int
  numberChildren Int
  childrenAges   String
  genderChildren String
  location       String
  isAdmin        Boolean      @default(false)
  isDisabled     Boolean      @default(false)
  favorites      all_events[]
  role           Role         @default(CUSTOMER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
